
@{
    ViewBag.Title = "Index";
}
@section Style{
    <style>
        .layui-btn-small {
            padding: 0 15px;
        }

        .layui-form-checkbox {
            margin: 0;
        }

        tr td:not(:nth-child(0)),
        tr th:not(:nth-child(0)) {
            text-align: center;
        }

        .layui-layer-title {
            text-align: center;
            background-color: #009688;
        }

        .layui-layer-content {
            padding: 20px 50px 5px 0;
        }
    </style>
}

<div style="text-align:center">
    <fieldset id="announcementConsole" class="layui-elem-field layui-field-title" style="display:none">
        <legend>控制台</legend>
        <div class="layui-field-box">
            <div id="announcementIndexTop">
                <form class="layui-form layui-form-pane" action="">
                    <div class="layui-form-item" style="margin:0;margin-top:15px;">
                        <div class="layui-inline">
                            <div class="layui-input-inline" style="width:auto">
                                <a onclick="addAnnouncement()" class="layui-btn layui-btn-normal">发布公告</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </fieldset>

    <fieldset id="announcementList" class="layui-elem-field layui-field-title" style="display:none">
        <legend id="announcementBoxTitle">公告列表</legend>
        <div class="layui-field-box">
            <div id="announcementIndex">
                <!--内容区域 ajax获取-->
            </div>
            <div id="page"></div>
        </div>
    </fieldset>

</div>


@section Scripts{

    <script src="~/js/admin/announcement/index.js"></script>
}