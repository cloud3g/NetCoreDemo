@model List<Blog.Models.Resource>
@using Blog.Models
@using Blog.Common
@{
    ViewData["Title"] = "Home Page";
    ViewBag.navId = "navResource";
}
@section Styles{
    <link  rel="stylesheet" href="~/css/resource/index.css"/>
}
<div class="blog-body">
    <div class="blog-container">
        <blockquote class="layui-elem-quote sitemap layui-breadcrumb shadow">


            <a href="/" title="网站首页">网站首页</a>

            <a><cite>资源分享</cite></a>

        </blockquote>
        <div class="blog-main">
            <div class="blog-main">
                <div class="child-nav shadow">
                    <span onclick="javascript: location.href = '/Resource';" class="child-nav-btn child-nav-btn-this">全部</span>
                </div>
                <div class="resource-main">
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <div class="resource shadow">
                                <div class="resource-cover">
                                    <a href="@item.Demolink" target="_blank">
                                        <img src="@item.ResourceCoverSrc" alt="时光轴" />
                                    </a>
                                </div>
                                <h1 class="resource-title"><a href="@item.Demolink" target="_blank">@item.Name</a></h1>
                                <p class="resource-abstract">@item.Abstract</p>
                                <div class="resource-info">
                                    <span class="category"><a href="javasript:;"><i class="fa fa-tags fa-fw"></i>&nbsp;@Utils.GetEnumDesc(item.Type)</a></span>
                                    <span class="author"><i class="fa fa-user fa-fw"></i>@item.Submitter</span>
                                    <div class="clear"></div>
                                </div>
                                <div class="resource-footer">
                                    <a class="layui-btn layui-btn-small layui-btn-primary" href="@item.Demolink" target="_blank"><i class="fa fa-eye fa-fw"></i>演示</a>
                                    <a class="layui-btn layui-btn-small layui-btn-primary" href="@item.Downloadlink" target="_blank"><i class="fa fa-download fa-fw"></i>下载</a>
                                </div>
                            </div>
                        }
                        <div class="clear"></div>

                    }
                    else
                    {
                        <div style="text-align:center">博主很懒,还未分享资源</div>

                    }



                </div>
            </div>
        </div>
    </div>

</div>
